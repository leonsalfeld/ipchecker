<body>
    <div class="particles" id="particles"></div>
    
    <!-- Such-Sektion -->
    <div class="search-section">
        <div class="search-container">
            <input type="text" class="search-input" id="ipSearchInput" placeholder="IP-Adresse eingeben (z.B. 8.8.8.8) oder Domain..." maxlength="45">
            <button class="search-btn" onclick="searchIP()">
                <i class="fas fa-search"></i>
                Suche IP
            </button>
            <button class="my-ip-btn" onclick="getMyIP()">
                <i class="fas fa-globe"></i>
                Meine IP
            </button>
        </div>
        <div class="search-info">
            <i class="fas fa-info-circle"></i>
            <span>IPv4, IPv6 oder Domain-Namen unterst√ºtzt</span>
        </div>
    </div>

    <!-- Haupt-Container -->
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-globe"></i> IP-Checker Pro</h1>
            <div id="ipTypeBadge" class="ip-type-badge" style="display: none;"></div>
            <p id="headerSubtitle">Entdecke deine digitale Identit√§t</p>
        </div>

        <div class="ip-card" id="ipCard" tabindex="0">
            <div class="ip-container">
                <div id="ipValue" class="ip-value loading" onclick="copyIP()">Verbinde mit Server...</div>
                <div class="copy-icon" onclick="copyIP()" title="Kopieren">
                    <i class="fas fa-copy"></i>
                </div>
            </div>
            <div id="copiedText" class="copied-text">Copied to Clipboard!</div>
        </div>

        <button class="refresh-btn" onclick="refreshCurrentIP()" id="refreshBtn">
            <i class="fas fa-sync-alt"></i>
            Aktualisieren
        </button>

        <div id="infoGrid" class="info-grid" style="display: none;"></div>
        <div id="status" class="status" style="display: none;"></div>
    </div>

    <script>
        let currentIP = '';
        let currentIPType = 'my-ip'; // 'my-ip' oder 'searched'

        // Partikel-Effekt
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 20; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.width = particle.style.height = (Math.random() * 4 + 2) + 'px';
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 4) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Validierung f√ºr IP/Domain
        function isValidInput(input) {
            // IPv4 Validierung
            const ipv4Regex = /^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;
            // IPv6 Validierung (vereinfacht)
            const ipv6Regex = /^([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}$/;
            // Domain Validierung
            const domainRegex = /^[a-zA-Z0-9][a-zA-Z0-9-]{1,61}[a-zA-Z0-9]\.[a-zA-Z]{2,}$/;
            
            return ipv4Regex.test(input) || ipv6Regex.test(input) || domainRegex.test(input);
        }

        // IP-Suche
        async function searchIP() {
            const input = document.getElementById('ipSearchInput').value.trim();
            const searchBtn = document.querySelector('.search-btn');
            
            if (!input) {
                showStatus('Bitte IP-Adresse oder Domain eingeben', 'error');
                return;
            }
            
            if (!isValidInput(input)) {
                showStatus('Ung√ºltige IP-Adresse oder Domain', 'error');
                return;
            }

            searchBtn.disabled = true;
            searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Suche...';
            
            try {
                let targetIP = input;
                
                // Wenn es eine Domain ist, IP aufl√∂sen
                if (!input.match(/^\d+\.\d+\.\d+\.\d+$/) && !input.includes(':')) {
                    const resolveResponse = await fetch(`https://dns.google/resolve?name=${input}&type=A`);
                    const resolveData = await resolveResponse.json();
                    
                    if (resolveData.Status === 0 && resolveData.Answer) {
                        const ipMatch = resolveData.Answer[0].data.match(/(\d+\.\d+\.\d+\.\d+)/);
                        if (ipMatch) {
                            targetIP = ipMatch[1];
                        } else {
                            showStatus('Konnte IP-Adresse nicht aufl√∂sen', 'error');
                            return;
                        }
                    } else {
                        showStatus('Domain nicht gefunden', 'error');
                        return;
                    }
                }
                
                await loadIPData(targetIP, 'searched', input);
                
            } catch (error) {
                console.error('Fehler bei IP-Suche:', error);
                showStatus('Fehler bei der IP-Suche', 'error');
            } finally {
                searchBtn.disabled = false;
                searchBtn.innerHTML = '<i class="fas fa-search"></i> Suche IP';
            }
        }

        // Eigene IP laden
        async function getMyIP() {
            currentIPType = 'my-ip';
            document.getElementById('ipSearchInput').value = '';
            await loadIPData(null, 'my-ip');
        }

        // IP-Daten laden
        async function loadIPData(ip = null, type, originalInput = '') {
            const ipValue = document.getElementById('ipValue');
            const infoGrid = document.getElementById('infoGrid');
            const status = document.getElementById('status');
            const ipCard = document.getElementById('ipCard');
            const ipTypeBadge = document.getElementById('ipTypeBadge');
            const headerSubtitle = document.getElementById('headerSubtitle');
            const refreshBtn = document.getElementById('refreshBtn');

            ipValue.textContent = 'Lade IP-Daten...';
            ipValue.classList.add('loading');
            infoGrid.style.display = 'none';
            status.style.display = 'none';
            ipCard.classList.remove('copied', 'loaded');
            currentIP = '';

            try {
                // IP ermitteln
                let targetIP;
                if (type === 'my-ip') {
                    const ipResponse = await fetch('https://api.ipify.org?format=json');
                    const ipData = await ipResponse.json();
                    targetIP = ipData.ip;
                } else {
                    targetIP = ip;
                }

                currentIP = targetIP;
                ipValue.textContent = currentIP;
                ipValue.classList.remove('loading');
                ipCard.classList.add('loaded');

                // IP-Typ Badge setzen
                if (type === 'my-ip') {
                    ipTypeBadge.textContent = 'Meine IP-Adresse';
                    headerSubtitle.textContent = 'Deine aktuelle √∂ffentliche IP';
                    refreshBtn.onclick = getMyIP;
                    refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Meine IP aktualisieren';
                } else {
                    ipTypeBadge.textContent = originalInput === targetIP ? 'IP-Adresse' : `Domain: ${originalInput}`;
                    headerSubtitle.textContent = `Informationen zu ${originalInput || targetIP}`;
                    refreshBtn.onclick = () => loadIPData(targetIP, 'searched', originalInput);
                    refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Aktualisieren';
                }
                ipTypeBadge.style.display = 'inline-block';

                // Geolocation-Daten
                const geoResponse = await fetch(`https://ipapi.co/${targetIP}/json/`);
                const geoData = await geoResponse.json();

                // Info-Grid mit Kopierfunktion
                infoGrid.innerHTML = `
                    <div class="info-item" onclick="copyToClipboard('${targetIP}')">
                        <i class="fas fa-network-wired"></i>
                        <div class="info-label">IP-Adresse</div>
                        <div class="info-value">${targetIP}</div>
                    </div>
                    <div class="info-item" onclick="copyToClipboard('${geoData.country_name || 'Unbekannt'}')">
                        <i class="fas fa-flag"></i>
                        <div class="info-label">Land</div>
                        <div class="info-value">${geoData.country_name || 'Unbekannt'}</div>
                    </div>
                    <div class="info-item" onclick="copyToClipboard('${geoData.city || 'Unbekannt'}')">
                        <i class="fas fa-map-marker-alt"></i>
                        <div class="info-label">Stadt</div>
                        <div class="info-value">${geoData.city || 'Unbekannt'}</div>
                    </div>
                    <div class="info-item" onclick="copyToClipboard('${geoData.org || 'Unbekannt'}')">
                        <i class="fas fa-building"></i>
                        <div class="info-label">Provider</div>
                        <div class="info-value">${geoData.org || 'Unbekannt'}</div>
                    </div>
                    <div class="info-item" onclick="copyToClipboard('${geoData.region || 'Unbekannt'}')">
                        <i class="fas fa-map"></i>
                        <div class="info-label">Region</div>
                        <div class="info-value">${geoData.region || 'Unbekannt'}</div>
                    </div>
                    <div class="info-item" onclick="copyToClipboard('${geoData.postal || 'Unbekannt'}')">
                        <i class="fas fa-envelope"></i>
                        <div class="info-label">PLZ</div>
                        <div class="info-value">${geoData.postal || 'Unbekannt'}</div>
                    </div>
                `;
                infoGrid.style.display = 'grid';

                const successMsg = type === 'my-ip' ? 
                    '‚úÖ Deine IP-Adresse wurde geladen!' : 
                    `‚úÖ Daten f√ºr ${targetIP} geladen!`;
                showStatus(successMsg, 'success');

            } catch (error) {
                console.error('Fehler:', error);
                ipValue.textContent = 'Fehler beim Laden';
                showStatus('‚ùå Fehler beim Abrufen der IP-Daten', 'error');
            }
        }

        // IP kopieren
        async function copyIP() {
            if (!currentIP) {
                showStatus('Zuerst IP laden!', 'error');
                return;
            }
            await copyToClipboard(currentIP, 'IP-Adresse');
        }

        // Allgemeine Kopierfunktion
        async function copyToClipboard(text, label = '') {
            try {
                await navigator.clipboard.writeText(text);
                showCopySuccess(`${label || text} kopiert!`);
            } catch (err) {
                fallbackCopyTextToClipboard(text);
                showCopySuccess(`${label || text} kopiert!`);
            }
        }

        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.top = "0";
            textArea.style.left = "0";
            textArea.style.position = "fixed";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            document.execCommand('copy');
            document.body.removeChild(textArea);
        }

        function showCopySuccess(message) {
            const ipCard = document.getElementById('ipCard');
            const copiedText = document.getElementById('copiedText');
            
            ipCard.classList.add('copied');
            copiedText.classList.add('show');
            copiedText.textContent = 'Copied to Clipboard! ‚úÖ';
            
            showStatus(message + ' (STRG+V zum Einf√ºgen)', 'success');
            
            setTimeout(() => {
                copiedText.classList.remove('show');
                ipCard.classList.remove('copied');
            }, 2000);
        }

        function showStatus(message, type) {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = `status ${type}`;
            status.style.display = 'block';
            
            setTimeout(() => {
                status.style.display = 'none';
            }, 4000);
        }

        function refreshCurrentIP() {
            if (currentIPType === 'my-ip') {
                getMyIP();
            } else {
                const input = document.getElementById('ipSearchInput').value.trim();
                searchIP();
            }
        }

        // Enter-Taste f√ºr Suche
        document.getElementById('ipSearchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchIP();
            }
        });

        // Initialisierung
        createParticles();
        getMyIP();
    </script>
</body>
</html>
